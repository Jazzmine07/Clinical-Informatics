    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.full.min.js"></script>

    <script>
        var suppliesArray = [];

        function addSupply(supply, batchNum, quantity, unit, purchDate, expDate) {
            suppliesArray.push({supply: supply, batchNum: batchNum, quantity: quantity, unit: unit, purchDate: purchDate, expDate: expDate});
        }

        var i = 0;  

        $('#addSupply').click(function(){
            var supply = document.getElementById("supply").value;
            var batchNum = document.getElementById("batchNum").value;
            var quantity = document.getElementById("quantity").value;
            var unit = document.getElementById("unit");
            var selectedUnit = unit.options[unit.selectedIndex].value;
            var purchDate = document.getElementById("purchDate").value;
            var expDate = document.getElementById("expDate").value;

            console.log(supply);
            console.log(batchNum);
            console.log(quantity);
            console.log(selectedUnit);
            console.log(purchDate);
            console.log(expDate);

            addSupply(supply, batchNum, quantity, selectedUnit, purchDate, expDate);

            $('#dynamic_field').append('<tr id="row'+i+'"><td><input disabled="disabled" class="form-control" placeholder="' + batchNum +'"></input></td><td><input disabled="disabled" class="form-control" placeholder="' + supply +'"></input></td><td><input class="form-control" disabled="disabled" placeholder="' + quantity + '"</input></td><td><input disabled="disabled" class="form-control" placeholder="'+ selectedUnit +'"></td><td><input disabled="disabled" class="form-control" placeholder="'+ purchDate +'"</input></td><td><input disabled="disabled" class="form-control" placeholder="'+ expDate +'"</input></td><td><button type="button" name="remove" id="'+i+'" class="btn btn-danger btn_remove">x</button></td></tr>');
            
            i++;
        });

        var removeIDs = [];

        $(document).on('click', '.btn_remove', function(){  
            var button_id = $(this).attr("id");
            console.log("removing..." + button_id);  
            removeIDs.push(button_id);
            $('#row'+button_id+'').remove(); 
            console.log(removeIDs);    
        });  

        $('#saveBtn').click(function(){
            const toNumbers = arr => arr.map(Number);
            var newArray = toNumbers(removeIDs);
            console.log(newArray);       

            newArray.sort();
            console.log(newArray);

            for (var j = newArray.length -1; j >= 0; j--)
                suppliesArray.splice(newArray[j],1);

            console.log(suppliesArray);

            $.ajax({
                url: '/addSupplyInventory',
                method: 'POST',
                data: {
                    supplies: suppliesArray
                },
                success: function(data) {
                    console.log("adding supply success in ajax!");
                    window.location.href = "/inventory-supply";
                }
            });
        });
    </script>
