    <script>
        $('#supplyTable tbody button.btn.btn-primary.shadow-sm').on('click', function(e) {
            var row = $(this).closest('tr');
            //var index =row.index();
            var qtyCell = row.find('td').eq(2);
            var qty = row.find('td').eq(2).text();
            console.log('TR qty cell: ' + row.find('td').eq(2).text());
            
            var val = $(this).closest('td');
            var amount = val.find("input").val();
            console.log('TR amt cell: ' + val.find("input").val());

            var supplyID = $(this).closest('tr').attr('id');

            console.log("id " + supplyID);
    
            if(amount < 0){
                val.find("input").addClass('is-invalid');
            } 
            else if(amount >= parseInt(qty)){
                val.find("input").addClass('is-invalid');
            }
            else if(amount >= 0 && amount < parseInt(qty)){
                val.find("input").removeClass('is-invalid');
                val.find("input").addClass('is-valid');
                qtyCell.text(amount);
                $.post("/updateSupplyInventory", {supplyID: supplyID, amount: amount});
            }
            $('#supplyTable').DataTable({
                destroy: true,
                order: [[1, 'asc']],
                rowGroup: {
                    endRender: function (rows, group ) {
                        var total = rows
                            .data()
                            .pluck(2)
                            .reduce( function (a, b) {
                                return a + b.replace(/[^\d]/g, '')*1;
                            }, 0);

                        return ' Total Quantity: '+
                            $.fn.dataTable.render.number(',', '.', 0).display( total );
                    },
                    dataSrc: 1
                }
            });
        });
    </script>
